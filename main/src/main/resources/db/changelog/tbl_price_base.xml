<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Reza Mazloom" id="mazloom_005">
        <createSequence sequenceName="SEQ_PRICE_BASE"/>
    </changeSet>
    <changeSet author="Reza Mazloom" id="mazloom_006">
        <createTable tableName="TBL_PRICE_BASE">
            <column name="ID" type="NUMBER(19, 0)">
                <constraints primaryKey="true" primaryKeyName="TBL_PRICE_BASEPK"/>
            </column>
            <column name="c_created_by" type="VARCHAR2(255 CHAR)">
                <constraints nullable="false"/>
            </column>
            <column name="d_created_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="c_last_modified_by" type="VARCHAR2(255 CHAR)"/>
            <column name="d_last_modified_date" type="TIMESTAMP"/>
            <column name="n_version" type="NUMBER(10, 0)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="1" name="N_E_STATUS" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column defaultValueNumeric="1" name="B_EDITABLE" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="F_ELEMENT_ID" type="NUMBER(19, 0)"/>
            <column name="N_PRICE" type="NUMBER(5, 10)"/>
            <column name="N_PRICE_BASE_REFERENCE" type="NUMBER(10, 0)"/>
            <column name="D_PRICE_DATE" type="TIMESTAMP"/>
        </createTable>
    </changeSet>
    <changeSet author="Reza Mazloom" id="mazloom_007">
        <addUniqueConstraint columnNames="F_ELEMENT_ID, N_PRICE_BASE_REFERENCE, D_PRICE_DATE"
                             constraintName="element_priceBaseReference_priceDate_UNIQUE" tableName="TBL_PRICE_BASE"/>
    </changeSet>
    <changeSet author="Reza Mazloom" id="mazloom_008">
        <addForeignKeyConstraint baseColumnNames="F_ELEMENT_ID" baseTableName="TBL_PRICE_BASE"
                                 constraintName="PriceBase2ElementByElementId" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id"
                                 referencedTableName="TBL_WARH_ELEMENT" validate="true"/>
    </changeSet>

    <changeSet id="MShahabi" author="1799887766554-007">
        <modifyDataType columnName="N_PRICE" newDataType="NUMBER(10, 5)" tableName="TBL_PRICE_BASE"/>
    </changeSet>

    <!-- Add foreign key to TBL_UNIT and TBL_CURRENCY -->
    <changeSet author="karimi (generated)" id="1593491220577-228">
        <addColumn tableName="TBL_PRICE_BASE">
            <column name="F_CURRENCY_ID" type="number(19, 0)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="karimi (generated)" id="1593491220577-229">
        <addColumn tableName="TBL_PRICE_BASE">
            <column name="F_UNIT_ID" type="number(19, 0)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="karimi (generated)" id="1593491220577-230">
        <addForeignKeyConstraint baseColumnNames="F_CURRENCY_ID" baseTableName="TBL_PRICE_BASE"
                                 constraintName="fk_priceBase2CurrencyByCurrencyId" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="ID" referencedTableName="TBL_CURRENCY"
                                 validate="true"/>
    </changeSet>
    <changeSet author="karimi (generated)" id="1593491220577-231">
        <addForeignKeyConstraint baseColumnNames="F_UNIT_ID" baseTableName="TBL_PRICE_BASE"
                                 constraintName="fk_priceBase2UnitByUnitId" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="ID" referencedTableName="TBL_UNIT" validate="true"/>
    </changeSet>

    <changeSet author="Reza Mazloom" id="mazloom_009">
        <dropUniqueConstraint tableName="TBL_PRICE_BASE" constraintName="element_priceBaseReference_priceDate_UNIQUE"/>
        <addUniqueConstraint columnNames="F_ELEMENT_ID, F_CURRENCY_ID, F_UNIT_ID, N_PRICE_BASE_REFERENCE, D_PRICE_DATE"
                             constraintName="element_currency_unit_priceBaseReference_priceDate_UNIQUE" tableName="TBL_PRICE_BASE"/>
    </changeSet>

</databaseChangeLog>
